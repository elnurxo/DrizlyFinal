@model CouponCategory
@{
    ViewData["Title"] = "Create Coupon";
}

<div class="content-wrapper" style="margin-left:-25px;padding-top:0px">
    <div class="container-fluid">

        <div class="row">
            <div class="col-lg-12">
                <div class="d-flex justify-content-between m-4">
                    <h3>Coupon Create</h3>
                    <a asp-action="index" class="btn btn-success">Go Back</a>
                </div>
                <div class="card">
                    <div class="card-body">
                        <div class="card-title">Create New Partner</div>
                        <hr>
                        <form asp-action="create" method="post" enctype="multipart/form-data">
                            <div class="form-row">
                                <div class="col-lg-6">
                                    <label asp-for="Name">Enter Coupon Nmae</label>
                                    <input required class="form-control" asp-for="Name" placeholder="Name">
                                    <span class="text-danger" asp-validation-for="Name"></span>
                                </div>
                                <div class="col-lg-6">
                                    <label asp-for="DiscountPercent">Enter Coupon Discount %</label>
                                    <input class="form-control" min="0" max="100" required asp-for="DiscountPercent" placeholder="Discount percent">
                                    <span class="text-danger" asp-validation-for="DiscountPercent"></span>
                                </div>
                            </div>
                            <div class="col-lg-12">
                                <label asp-for="SaleValue">Coupon given Value</label>
                                <input required min="0" class="form-control" asp-for="SaleValue" placeholder="When you give this coupon?(over xxx$)">
                                <span class="text-danger" asp-validation-for="SaleValue"></span>
                            </div>
                          
                            <button type="submit" class="btn btn-light px-5 mt-4">CREATE</button>
                        </form>
                    </div>
                </div>
            </div>

        </div><!--End Row-->
        <!--start overlay-->
        <div class="overlay toggle-menu"></div>
        <!--end overlay-->
    </div>
</div>


