@model CouponCategory
@{
    ViewData["Title"] = "Edit Coupon";
}

<div class="content-wrapper" style="margin-left:-25px;padding-top:0px">
    <div class="container-fluid">

        <div class="row">
            <div class="col-lg-12">
                <div class="d-flex justify-content-between m-4">
                    <h3>Coupon Edit</h3>
                    <a asp-action="index" class="btn btn-success">Go Back</a>
                </div>
                <div class="card">
                    <div class="card-body">
                        <div class="card-title">Edit Coupon</div>
                        <form asp-action="edit" method="post">
                            <div class="form-row">
                                <div class="col-lg-6">
                                    <label asp-for="Name">Edit Coupon Name</label>
                                    <input class="form-control" required asp-for="Name" placeholder="Name">
                                    <span class="text-danger" asp-validation-for="Name"></span>
                                </div>
                                <div class="col-lg-6">
                                    <label asp-for="DiscountPercent">Edit Coupon Discount %</label>
                                    <input class="form-control" required asp-for="DiscountPercent" placeholder="Discount percent">
                                    <span class="text-danger" asp-validation-for="DiscountPercent"></span>
                                </div>
                            </div>
                            <div class="col-lg-9">
                                    <label asp-for="SaleValue">Edit Coupon Sale Value</label>
                                    <input class="form-control" required asp-for="SaleValue" placeholder="Sale Value">
                                    <span class="text-danger" asp-validation-for="SaleValue"></span>
   
                            </div>

                            <button type="submit" class="btn btn-light px-5 mt-3">EDIT</button>
                        </form>
                    </div>
                </div>
            </div>

        </div><!--End Row-->
        <!--start overlay-->
        <div class="overlay toggle-menu"></div>
        <!--end overlay-->
    </div>
</div>






