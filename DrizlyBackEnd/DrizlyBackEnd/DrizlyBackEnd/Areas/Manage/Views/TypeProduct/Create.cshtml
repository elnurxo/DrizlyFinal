@model TypeProduct
@{
    ViewData["Title"] = "Create Type";
}
<style>
    select option {
        background: rgba(0,0,0, -0.96) !important;
    }
</style>
<div class="content-wrapper" style="margin-left:-25px;padding-top:0px">
    <div class="container-fluid">

        <div class="row">
            <div class="col-lg-12">
                <div class="d-flex justify-content-between m-4">
                    <h3>Product Create</h3>
                    <a asp-action="index" class="btn btn-success">Go Back</a>
                </div>
                <div class="card">
                    <div class="card-body">
                        <div class="card-title">Create New Product</div>
                        <hr>
                        <form asp-action="create" method="post">
                            <div class="form-row">
                                <div class="form-group col-lg-6">
                                    <label asp-for="CategoryId">Categories</label>
                                    <select class="form-control" asp-for="CategoryId" asp-items="@new SelectList(ViewBag.Categories, nameof(Category.Id), nameof(Category.Name))">
                                    </select>
                                    <span class="text-danger" asp-validation-for="CategoryId"></span>
                                </div>
                                <div class="form-group col-lg-6">
                                    <label asp-for="Name">Name</label>
                                    <input class="form-control" max="85" asp-for="Name" placeholder="Enter Name">
                                    <span class="text-danger" asp-validation-for="Name"></span>
                                </div>
                            </div>
                            <button type="submit" class="btn btn-success create-product-btn mt-3">Submit</button>
                        </form>
                    </div>
                </div>
            </div>

        </div>

    </div>

</div>




