@model AppUser
@{
    ViewData["Title"] = "Edit";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12 mx-auto">
            <h1>Edit</h1>
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">FullName: @Model.FullName</h5>
                    @if (Model.PhoneNumber != null)
                    {
                        <h5 class="card-title">Phone: @Model.PhoneNumber</h5>
                    }
                    <h5 class="card-title">Email: @Model.Email</h5>
                    @if (Model.Country != null)
                    {
                        <h5 class="card-title">Country: @Model.Country</h5>
                    }
                    @if (Model.City != null)
                    {
                        <h5 class="card-title">City: @Model.City</h5>
                    }
                    @if (Model.Address != null)
                    {
                        <h5 class="card-title">Address: @Model.Address</h5>
                    }
                    <form asp-action="edit" method="post">
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <input type="hidden" value="@Model.RoleName"/>
                                <select class="form-control" asp-for="RoleName">
                                    <option value="Creator">Creator</option>
                                    <option value="Editor">Editor</option>
                                    <option value="Reader">Reader</option>
                                </select>
                            </div>
                            <div class="form-group col-md-3">
                                <button type="submit" class="btn btn-primary orderstatus-change">Save</button>
                            </div>
                            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                        </div>

                    </form>

                </div>
            </div>
        </div>
    </div>
</div>


