@model Employee
@{
    ViewData["Title"] = "Edit Employee";
}


<div class="content-wrapper" style="margin-left:-25px;padding-top:0px">
    <div class="container-fluid">

        <div class="row">
            <div class="col-lg-12">
                <div class="d-flex justify-content-between m-4">
                    <h3>Employee Edit</h3>
                    <a asp-action="index" class="btn btn-success">Go Back</a>
                </div>
                <div class="card">
                    <div class="card-body">
                        <div class="card-title">Edit Employee</div>
                        <hr>
                        <form asp-action="edit" method="post" enctype="multipart/form-data">
                            <div class="form-group col-lg-6">
                                <label asp-for="FullName">Full Name</label>
                                <input class="form-control" asp-for="FullName" placeholder="Enter Full Name">
                                <span class="text-danger" asp-validation-for="FullName"></span>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-lg-6">
                                    <label asp-for="PositionId">Position</label>
                                    <select class="form-control" asp-for="PositionId" asp-items="@new SelectList(ViewBag.Positions,nameof(Position.Id),nameof(Position.Name))">
                                    </select>
                                </div>
                                <div class="form-group col-lg-6">
                                    <label asp-for="ImageFile">Employee Image</label>
                                    <input class="form-control" asp-for="ImageFile" placeholder="Select image">
                                    <span class="text-danger" asp-validation-for="ImageFile"></span>
                                    @if (Model.Image != null)
                                    {
                                        <div class="img-box mt-2" style="position:relative;display:inline-block">
                                            <input type="hidden" name="Value" value="@Model.Image" />
                                            <img width="250" src="~/uploads/employees/@Model.Image" />
                                        </div>
                                    }
                                </div>
                            </div>
                            <button type="submit" class="btn btn-success">Submit</button>
                        </form>
                    </div>
                </div>
            </div>

        </div>

    </div>

</div>





